@model IEnumerable<TodoApp.Entities.UserAccount>

    @{
    ViewData["Title"] = "Account";
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Roboto', sans-serif;
                background: linear-gradient(to right, #6A0DAD, #8A2BE2); /* Güzel bir mor geçiş */
                color: #fff;
                margin: 0;
                padding: 0;
            }

            .navbar {
                background: rgba(255, 255, 255, 0.9); /* Navbar stili */
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                height: 60px; /* Navbar yüksekliği sabit */
            }

            .container {
                margin-top: 50px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
                padding: 2rem;
                box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2); /* Gölgeyi biraz daha belirgin yaptık */
                backdrop-filter: blur(8px);
            }

            a {
                display: inline-block;
                margin-top: 1rem;
                color: #fff;
                text-decoration: none;
                font-weight: 600;
                padding: 0.5rem 1rem;
                border-radius: 5px;
                transition: background-color 0.3s ease;
                background-color: transparent;
            }

                a:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                }
        </style>
    </head>
    <body>
 

        <div class="container">
            <h4>Hello, @ViewBag.Name!</h4>
            <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary">Change Password</a>
            <a asp-controller="Account" asp-action="DeleteAccount" class="btn btn-danger">Delete Account</a>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
