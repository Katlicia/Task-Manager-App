@if (Context.User.Identity.Name != null)
{
<form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right d-flex align-items-center">
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @Context.User.Identity.Name!</span> 
        </li>
        <li class="nav-item">
            <button class="nav-link text-dark" asp-controller="Account" asp-action="Index">Account</button> 
        </li>
        <li class="nav-item">
            <button type="submit" class="btn btn-link text-dark navbar-btn navbar-link">Log off</button> 
    </ul>
</form>
}
else
{
<ul class="nav navbar-nav navbar-right d-flex align-items-center">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp">Sign Up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a> 
    </li>
</ul>
}
